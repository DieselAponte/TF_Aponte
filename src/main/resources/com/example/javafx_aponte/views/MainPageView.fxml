<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.javafx_aponte.controllers.MainPageController"
            prefWidth="1200" prefHeight="700">

    <fx:define>
        <ToggleGroup fx:id="tipoGroup"/>
        <ToggleGroup fx:id="experienciaGroup"/>
        <ToggleGroup fx:id="sueldoGroup"/>
    </fx:define>

    <!-- Top section -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #4285f4; -fx-padding: 10;">
            <TextField fx:id="searchBar" promptText="Buscar..." style="-fx-pref-width: 300;" HBox.hgrow="ALWAYS"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Button fx:id="btnNotifications" style="-fx-background-color: transparent; -fx-text-fill: white;">
                <graphic>
                    <StackPane>
                        <Label text="游댒" style="-fx-font-size: 16;"/>
                        <Label fx:id="notificationBadge" text="" style="-fx-font-size: 10; -fx-text-fill: red; -fx-translate-y: -10; -fx-translate-x: 5;"/>
                    </StackPane>
                </graphic>
            </Button>
        </HBox>
    </top>

    <!-- 游빔 Center: filtros, lista y detalles -->
    <center>
        <HBox spacing="15">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- 游늷 Panel Filtros -->
            <VBox spacing="10" prefWidth="200" style="-fx-background-color: #f0f0f0;">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <Label text="Tipo" style="-fx-font-weight: bold;"/>
                <RadioButton text="Construcci칩n" toggleGroup="$tipoGroup"/>
                <RadioButton text="Ventas" toggleGroup="$tipoGroup"/>
                <RadioButton text="Transporte" toggleGroup="$tipoGroup"/>
                <RadioButton text="Mudanza" toggleGroup="$tipoGroup"/>

                <Separator/>

                <Label text="Experiencia" style="-fx-font-weight: bold;"/>
                <RadioButton text="1 a침o" toggleGroup="$experienciaGroup"/>
                <RadioButton text="2 - 5 a침os" toggleGroup="$experienciaGroup"/>
                <RadioButton text="6 a침os a m치s" toggleGroup="$experienciaGroup"/>

                <Separator/>

                <Label text="Sueldo" style="-fx-font-weight: bold;"/>
                <RadioButton text="950 soles" toggleGroup="$sueldoGroup"/>
                <RadioButton text="1025 soles" toggleGroup="$sueldoGroup"/>
                <RadioButton text="1200 soles" toggleGroup="$sueldoGroup"/>
            </VBox>

            <!-- 游늮 Lista de trabajos -->
            <VBox fx:id="jobListContainer" spacing="10" prefWidth="400" style="-fx-background-color: #ffffff;">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <Label text="Puestos de Trabajo" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <ListView fx:id="jobListView" prefHeight="600"/>
            </VBox>

            <!-- 游늯 Detalle del trabajo seleccionado -->
            <VBox fx:id="jobDetailPanel" spacing="10" prefWidth="400" visible="false"
                  style="-fx-background-color: #ffffff; -fx-border-color: #cccccc;">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <Label fx:id="jobTitleLabel" text="T칤tulo del trabajo" wrapText="true"
                       style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <Label fx:id="jobCompanyLabel" text="Empresa"/>
                <Label fx:id="jobLocationLabel" text="Ubicaci칩n"/>
                <Label fx:id="jobDetailsLabel" text="Descripci칩n" wrapText="true"/>
                <Button fx:id="btnPostularme" text="Postularme" style="-fx-background-color: #4285f4; -fx-text-fill: white;"/>
            </VBox>
        </HBox>
    </center>
</BorderPane>